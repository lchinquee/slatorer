<div class="comments">
  <!--For each comment-->
  {{#each this}}
    <div class="card">
        <h3 class="card-header"></h3>
        <section class="comment card-body">
            <div class="text">
              <!--Import text of comment-->
                {{comment_text}}
            </div>
            <div class="meta">
              <!--Provide data on user and when created--> 
                -{{user.username}}, {{format_date created_at}}
            </div>
        </section>
    </div>
  {{/each}}
</div>